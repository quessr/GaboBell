<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GaboBell" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.GaboBell" parent="Base.Theme.GaboBell" />

    <!-- TextView -->
    <style name="AnsimTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AnsimTextView.Bold" parent="AnsimTextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name="AnsimTextView.Medium" parent="AnsimTextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="AnsimTextView.Regular" parent="AnsimTextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AnsimTextView.Bold.White" parent="AnsimTextView.Bold">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AnsimTextView.Medium.White" parent="AnsimTextView.Medium">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AnsimTextView.Regular.White" parent="AnsimTextView.Regular">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--  팝업  -->
    <style name="AnsimTextView.Popup.Title.Bold.White" parent="AnsimTextView.Bold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AnsimTextView.Popup.Message.Medium.Gray" parent="AnsimTextView.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <!-- LightGray = #3F3F3F -->
    <style name="AnsimTextView.Regular.LightGray" parent="AnsimTextView.Regular">
        <item name="android:textColor">@color/text_light_gray</item>
    </style>
    <style name="AnsimTextView.Semibold.LightGray" parent="AnsimTextView.Bold">
        <item name="android:textColor">@color/text_light_gray</item>
    </style>

    <!-- Gray = #505050 -->
    <style name="AnsimTextView.Regular.Gray" parent="AnsimTextView.Regular">
        <item name="android:textColor">@color/text_gray</item>
    </style>
    <style name="AnsimTextView.Semibold.Gray" parent="AnsimTextView.Bold">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <!-- EditText (회원가입, 주소검색) -->
    <style name="AnsimEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_light_gray</item>
    </style>

    <style name="AnsimEditText.Regular" parent="AnsimEditText">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Button -->
    <style name="AnsimButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AnsimButton.Bottom" parent="AnsimButton">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_ansim_bottom_selector</item>
    </style>

    <style name="AnsimButton.Blue" parent="AnsimButton">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/btn_ansim_blue_selector</item>
    </style>

    <!-- 팝업 내 확인/취소는 디자인이 동일하지만 분리해두자.-->
    <style name="AnsimButton.Pop.Confirm" parent="AnsimButton">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/btn_ansim_pop_confirm_selector</item>
    </style>

    <style name="AnsimButton.Pop.Cancel" parent="AnsimButton">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/btn_ansim_pop_cancel_selector</item>
    </style>

    <style name="AnsimButton.Pop.Red" parent="AnsimButton">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/btn_ansim_pop_red_selector</item>
    </style>

</resources>