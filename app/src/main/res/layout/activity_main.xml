<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="26sp"
            android:theme="@style/AnsimTextView.Bold.White"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/btn_setting"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:src="@drawable/btn_bell_setting_selector" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.kakao.vectormap.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:background="#ff3366" />

    <ImageButton
        android:id="@+id/moveCurrentLocation"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="8dp"
        android:background="#DCDCDC"
        android:src="@drawable/btn_map_current_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <ImageButton
        android:id="@+id/zoomIn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:background="#DCDCDC"
        android:src="@drawable/btn_map_zoomin_selector"
        app:layout_constraintEnd_toEndOf="@id/moveCurrentLocation"
        app:layout_constraintStart_toStartOf="@id/moveCurrentLocation"
        app:layout_constraintTop_toBottomOf="@id/moveCurrentLocation" />

    <ImageButton
        android:id="@+id/zoomOut"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:background="#DCDCDC"
        android:src="@drawable/btn_map_zoomout_selector"
        app:layout_constraintEnd_toEndOf="@id/zoomIn"
        app:layout_constraintStart_toStartOf="@id/zoomIn"
        app:layout_constraintTop_toBottomOf="@id/zoomIn" />

    <ImageView
        android:id="@+id/btn_emergency_report"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/btn_emergency_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/btn_monitoring"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/btn_monitoring_selector"
        app:layout_constraintBottom_toBottomOf="@id/btn_emergency_report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_emergency_report"
        app:layout_constraintTop_toTopOf="@id/btn_emergency_report" />

    <ImageView
        android:id="@+id/btn_facilities"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/btn_safety_selector"
        app:layout_constraintBottom_toBottomOf="@id/btn_emergency_report"
        app:layout_constraintStart_toEndOf="@id/btn_emergency_report"
        app:layout_constraintTop_toTopOf="@id/btn_emergency_report" />

    <ImageView
        android:id="@+id/fab_police"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/btn_police_selector"
        app:layout_constraintBottom_toTopOf="@id/btn_facilities"
        app:layout_constraintEnd_toEndOf="@id/btn_facilities"
        app:layout_constraintStart_toStartOf="@id/btn_facilities" />

</androidx.constraintlayout.widget.ConstraintLayout>