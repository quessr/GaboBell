<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/titleArea"
                android:layout_width="312dp"
                android:layout_height="44dp"
                android:background="@color/pop_title_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/popupTitle"
                    style="@style/AnsimTextView.Popup.Title.Bold.White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알림"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/btnClose"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="11dp"
                    android:background="@color/pop_title_bg"
                    android:src="@drawable/btn_close_selector"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bodyArea"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:background="@color/pop_bg_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleArea">


                <LinearLayout
                    android:id="@+id/deviceIdArea"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginTop="47dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/ansim_pop_deviceid_bg"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/deviceId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        style="@style/AnsimTextView.Popup.Message.Bold.Gray"
                        android:text="0000" />

                </LinearLayout>

                <TextView
                    android:id="@+id/deviceMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/deviceIdArea"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/btnArea"
                    android:text="연결하시겠습니까?"
                    style="@style/AnsimTextView.Popup.Message.Bold.Gray"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/alertDetail"
                    style="@style/AnsimTextView.Popup.Message.Bold.Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:gravity="center_horizontal"
                    android:text="test_alertDetail"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/btnArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="76dp"
                    android:layout_marginBottom="28dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/deviceIdArea">

                    <Button
                        android:id="@+id/btnCancel"
                        style="@style/AnsimButton.Pop.Cancel"
                        android:layout_width="120dp"
                        android:layout_height="52dp"
                        android:layout_marginEnd="10dp"
                        android:text="취소"
                        android:visibility="gone"
                        app:layout_constraintEnd_toStartOf="@id/btnConfirm" />

                    <Button
                        android:id="@+id/btnConfirm"
                        style="@style/AnsimButton.Pop.Confirm"
                        android:layout_width="120dp"
                        android:layout_height="52dp"
                        android:text="확인" />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>