<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <!-- 타이틀 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTitleContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitleMonitoring"
            style="@style/AnsimTextView.Bold.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="안심벨 기기 설정"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="19dp"
            android:background="@drawable/btn_close_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 연결 상태 표기 -->
    <ImageView
        android:id="@+id/iv_bell_connection"
        android:layout_width="136dp"
        android:layout_height="36dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/bell_connected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clTitleContainer" />

    <!-- 펌웨어 버전 표기 -->
    <TextView
        android:id="@+id/tv_version"
        style="@style/AnsimTextView.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:gravity="center"
        android:textColor="#787878"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_bell_connection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_bell_connection"
        tools:text="버전 1.0.0" />

    <!-- 설정 항목 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_settings_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="23dp"
        android:background="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_bell_connection">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginVertical="8dp">

                <ImageView
                    android:id="@+id/bell_setting_icon_mute"
                    android:layout_width="24dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/bell_setting_icon_mute"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/AnsimTextView.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="무음 모드"
                    android:textColor="#787878"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/bell_setting_icon_mute"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/toggle_sound"
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/btn_toggle_selector"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginVertical="8dp">

                <ImageView
                    android:id="@+id/bell_setting_icon_message"
                    android:layout_width="24dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/bell_setting_icon_message"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/AnsimTextView.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="메시지"
                    android:textColor="#787878"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/bell_setting_icon_message"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/toggle_message"
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/btn_toggle_selector"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginVertical="8dp">

                <ImageView
                    android:id="@+id/bell_setting_icon_delay"
                    android:layout_width="24dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/bell_setting_icon_delay"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/AnsimTextView.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="5초지연 신고"
                    android:textColor="#787878"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/bell_setting_icon_delay"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/toggle_delay"
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/btn_toggle_selector"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginVertical="8dp">

                <ImageView
                    android:id="@+id/bell_setting_icon_flash"
                    android:layout_width="24dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/bell_setting_icon_flash"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/AnsimTextView.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="손전등"
                    android:textColor="#787878"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/bell_setting_icon_flash"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/toggle_led"
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/btn_toggle_selector"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <!-- 베터리 잔량 표시 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_battery_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_settings_group">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/icon_battery"
                android:layout_width="14dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="19dp"
                android:src="@drawable/bell_setting_icon_battery"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>

            <TextView
                style="@style/AnsimTextView.Bold"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="14dp"
                android:gravity="center"
                android:text="베터리"
                android:textColor="#787878"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/icon_battery"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_battery_status"
                android:layout_width="36dp"
                android:layout_height="20dp"
                android:layout_marginEnd="21dp"
                android:background="@drawable/batterry_status_charging"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btn_disconnect"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        style="@style/AnsimButton"
        android:text="기기해제"
        android:layout_marginTop="16dp"
        android:background="#9e9e9e"
        android:layout_marginHorizontal="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_battery_group"/>


